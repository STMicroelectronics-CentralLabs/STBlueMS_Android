    <View style="@style/Divider"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:weightSum="0.9" >
        <Button
            android:id="@+id/testTime"
            android:background="@drawable/button_blue_unselected"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 seconds"
            android:layout_margin="2dp"
            android:layout_weight=".30"/>
        <Button
            android:id="@+id/midTime"
            android:background="@drawable/button_blue_selected"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="5 minutes"
            android:layout_weight=".30"/>

        <Button
            android:id="@+id/highTime"
            android:background="@drawable/button_blue_unselected"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="10 minutes"
            android:layout_weight=".30"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.8" >
        <TextView
            android:id="@+id/counttimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/design_default_color_primary_dark"
            android:text="StopWatch:"
            android:layout_weight=".30"/>
        <TextView
            android:id="@+id/counttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/design_default_color_primary_dark"
            android:text="0"
            android:layout_weight=".20"/>
        <TextView
            android:id="@+id/gyroData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/design_default_color_primary_dark"
            android:text=""
            android:layout_weight=".30"/>
    </LinearLayout>
    <View style="@style/Divider"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:weightSum="0.9" >
        <Button
            android:id="@+id/lowThreshold"
            android:background="@drawable/button_green_selected"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="normal"
            android:layout_weight=".30"/>
        <Button
            android:id="@+id/midThreshold"
            android:background="@drawable/button_green_unselected"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="active"
            android:layout_weight=".30"/>

        <Button
            android:id="@+id/highThreshold"
            android:background="@drawable/button_green_unselected"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="athletic"
            android:layout_weight=".30"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.5" >

        <TextView
            android:id="@+id/thresholdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:textSize="20sp"
            android:textColor="#008000"
            android:text="Step Threshold:"
            tools:text="Step Threshold:" />
        <TextView
            android:id="@+id/thresholdVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:textSize="20sp"
            android:textColor="#008000"
            android:text="-100"
            tools:text="-100" />
