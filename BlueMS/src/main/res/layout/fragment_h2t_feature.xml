<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.st.BlueMS.physiobiometrics.H2TFeatureFragment">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.9" >
        <EditText
            android:id="@+id/editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="9"
            android:inputType="textPersonName"
            android:text="Step Detect"
            android:layout_weight=".50"/>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/ic_play_arrow"
            android:contentDescription="Start"
            android:id="@+id/startPlotButton"
            android:padding="1dp"
            android:layout_centerVertical="true"
            android:layout_weight=".50"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.9" >
        <RadioButton
            android:id="@+id/beepGoodStep"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Beep"
            android:layout_weight=".50"/>

        <RadioButton
            android:id="@+id/captureToFile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Capture"
            android:layout_weight=".40"/>
    </LinearLayout>
<!--    <TextView
        android:id="@+id/folderLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:weightSum="0.9" >
        <Button
            android:id="@+id/H2T25hz"
            android:background="@drawable/button_grey_unselected"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Hz"
            android:layout_margin="2dp"
            android:layout_weight=".30"/>
        <Button
            android:id="@+id/H2T50Hz"
            android:background="@drawable/button_grey_selected"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 Hz"
            android:layout_margin="2dp"
            android:layout_weight=".30"/>

        <Button
            android:id="@+id/H2Tcalibrate"
            android:background="@drawable/button_yellow_selected"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="calibrate"
            android:layout_margin="2dp"
            android:layout_weight=".30"/>
    </LinearLayout>

    <View style="@style/Divider"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:weightSum="0.9" >
        <Button
            android:id="@+id/testTime"
            android:background="@drawable/button_blue_unselected"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 seconds"
            android:layout_margin="2dp"
            android:layout_weight=".30"/>
        <Button
            android:id="@+id/midTime"
            android:background="@drawable/button_blue_selected"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="5 minutes"
            android:layout_weight=".30"/>

        <Button
            android:id="@+id/highTime"
            android:background="@drawable/button_blue_unselected"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="10 minutes"
            android:layout_weight=".30"/>
    </LinearLayout>
    <View style="@style/Divider"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:weightSum="0.9" >
        <Button
            android:id="@+id/lowThreshold"
            android:background="@drawable/button_green_selected"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="normal"
            android:layout_weight=".30"/>
        <Button
            android:id="@+id/midThreshold"
            android:background="@drawable/button_green_unselected"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="active"
            android:layout_weight=".30"/>

        <Button
            android:id="@+id/highThreshold"
            android:background="@drawable/button_green_unselected"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="athletic"
            android:layout_weight=".30"/>
    </LinearLayout>


